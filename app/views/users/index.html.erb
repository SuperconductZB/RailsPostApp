<h1>Users</h1>

<h2>User in Our System</h2>
<ul>
  <% @user.each do |user| %>
    <li>
      <%= link_to user.username, user %>
      <% user.posts.each do |post| %>
        <p>
          <strong>Title:</strong>
          <%= post.title %>
        </p>

        <p>
          <strong>Post:</strong>
          <%= post.body %>
        </p>
      <% end %>
    </li>
  <% end %>
</ul>

<form action="<%= new_user_path %>">
  <button >Sign Up as New User</button>
</form>
